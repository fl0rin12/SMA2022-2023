<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".PatientInteraction">

    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="#993333"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/patientCardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="@id/viewHeaderBackground"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderBackground">


        <TextView
            android:id="@+id/diagnostic"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Diagnostic"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/symptom"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="-11dp" />

        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_slab"
            android:text="Fullname"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/diagnostic"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/review"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/roboto_slab"
            android:text="Review"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/symptom"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="10dp" />

        <TextView
                android:id="@+id/medication"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_slab"
                android:text="Medicament"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="120dp" />



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/patientInteractionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"

        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>